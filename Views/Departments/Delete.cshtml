@model CDRMS_Web_Application.Models.DepartmentsModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-2xl font-bold text-red-500">Delete Department</h1>

<div class="rounded bg-white p-6 shadow-md">
    <h3 class="mb-4 text-lg">Are you sure you want to delete this?</h3>
    <dl class="mb-4">
        <dt class="font-semibold">Department Name</dt>
        <dd class="text-gray-700">@Html.DisplayFor(model => model.DepartmentName)</dd>
    </dl>
    <form asp-action="Delete" class="flex items-center space-x-4">
        <input type="hidden" asp-for="DepartmentId" />
        <a asp-action="Index" class="rounded bg-gray-400 px-4 py-2 text-white hover:bg-gray-300">Back to List</a>
        <button type="submit" value="Delete" class="rounded bg-red-500 px-4 py-2 text-white hover:bg-red-600">Delete</button>
    </form>
</div>
