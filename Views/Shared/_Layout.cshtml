<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/img/favicon.png" />
    <title>@ViewData["Title"] - CDRMS - Pronet (Pvt.) Ltd</title>

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="/css/site.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/lib/font-awesome/css/all.min.css" />

</head>
<body class="bg-gray-100 font-sans">

    <div id="wrapper">
        <!-- Topbar -->
        <nav class="bg-gradient-to-r from-gray-200 to-gray-300 shadow-md">
            <div class="container mx-auto flex items-center justify-between px-4 py-2">
                <!-- Left: Logo -->
                <a class="flex items-center" href="@Url.Action("IndexAdmin", "Home")">
                    <img src="/img/PronetLogo.png" alt="Logo" class="h-14 w-28 pl-5" />
                </a>

                <!-- Center: Title -->
                <div class="flex-grow text-center">
                    <h5 class="m-0 text-xl font-semibold">CDRMS - Dashboard</h5>
                </div>

                <!-- Right: User Profile Dropdown -->
                <div class="relative">
                    <button id="profileDropdown" class="relative focus:outline-none">
                        <img src="/img/DefaultProfile.png" alt="Profile Pic" class="border-2 h-12 w-12 rounded-full border-white" />
                    </button>
                    <ul id="dropdownMenu" class="absolute right-0 mt-2 hidden w-40 rounded-lg bg-white text-gray-700 shadow-md">
                        <li><a class="block px-4 py-2 hover:bg-gray-100" href="@Url.Action("IndexAdmin", "Home")">Home</a></li>
                        <li><a class="block px-4 py-2 hover:bg-gray-100" href="@Url.Action("Index", "Users")">Profile</a></li>
                        <li><a class="block px-4 py-2 hover:bg-gray-100" href="@Url.Action("Login", "Home")">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Sidebar -->
        <nav class="fixed left-0 h-screen w-60 bg-gray-100 shadow-md">
            <ul class="top-[70px] space-y-2 pt-5">
                <li>
                    <a class="block px-6 py-3 font-semibold text-gray-700 hover:bg-blue-100 hover:text-blue-500" href="@Url.Action("IndexAdmin", "Home")">
                        <i class="fas fa-home mr-2"></i>
                        Home
                    </a>
                </li>
                <li>
                    <a class="block px-6 py-3 font-semibold text-gray-700 hover:bg-blue-100 hover:text-blue-500" href="@Url.Action("Index", "Users")">
                        <i class="fas fa-users mr-2"></i>
                        User Management
                    </a>
                </li>
                <li>
                    <a class="block px-6 py-3 font-semibold text-gray-700 hover:bg-blue-100 hover:text-blue-500" href="@Url.Action("Index", "Departments")">
                        <i class="fas fa-building mr-2"></i>
                        Department
                    </a>
                </li>
                <li>
                    <a class="block px-6 py-3 font-semibold text-gray-700 hover:bg-blue-100 hover:text-blue-500" href="@Url.Action("Index", "Tariff")">
                        <i class="fas fa-globe mr-2"></i>
                        Tariffs
                    </a>
                </li>
                <li>
                    <a class="block px-6 py-3 font-semibold text-gray-700 hover:bg-blue-100 hover:text-blue-500" href="@Url.Action("Index", "Extensions")">
                        <i class="fas fa-phone mr-2"></i>
                        Extension
                    </a>
                </li>
                <li>
                    <a class="block px-6 py-3 font-semibold text-gray-700 hover:bg-blue-100 hover:text-blue-500" href="@Url.Action("Index", "Trunks")">
                        <i class="fas fa-network-wired mr-2"></i>
                        Trunk
                    </a>
                </li>

                <li>
                    <button class="block flex w-full items-center px-6 py-3 text-left font-semibold text-gray-700 hover:bg-blue-100 hover:text-blue-500" data-bs-toggle="collapse" data-bs-target="#reportsSubMenu">
                        <i class="fas fa-chart-bar mr-2"></i> Reports
                        <i class="fas fa-chevron-down ml-auto"></i>
                    </button>
                    <ul class="ml-6 hidden space-y-2" id="reportsSubMenu">
                        <li><a class="block px-4 py-2 hover:bg-gray-200" href="@Url.Action("CallsSummaryReport", "Reports")">Calls Summary Report</a></li>
                        <li><a class="block px-4 py-2 hover:bg-gray-200" href="@Url.Action("CallDetailsReport", "Reports")">Call Detail Report</a></li>
                        <li><a class="block px-4 py-2 hover:bg-gray-200" href="@Url.Action("TrunkWiseReport", "Reports")">Trunk-Wise Report</a></li>
                        <li><a class="block px-4 py-2 hover:bg-gray-200" href="@Url.Action("TotalDurationCDRReport", "Reports")">Total Duration CDRs</a></li>
                    </ul>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div id="page-wrapper" class="ml-60 min-h-screen bg-white p-8 shadow-inner">
            <div id="page-inner">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Tailwind JS -->
    <script>
        document.querySelector('#profileDropdown').addEventListener('click', () => {
            document.querySelector('#dropdownMenu').classList.toggle('hidden');
        });

        document.querySelectorAll('[data-bs-toggle="collapse"]').forEach(button => {
            button.addEventListener('click', () => {
                const target = document.querySelector(button.getAttribute('data-bs-target'));
                target.classList.toggle('hidden');
            });
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
