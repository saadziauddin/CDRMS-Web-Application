@model IEnumerable<CDRMS_Web_Application.Models.UsersModel>

@{
    ViewData["Title"] = "Index";
}

<div class="mb-4 flex items-center justify-between">
    <h1 class="text-2xl font-bold">Users</h1>
    <a asp-action="Create" class="inline-block rounded bg-red-500 px-4 py-2 text-white hover:bg-red-600">
        Create New
    </a>
</div>

<table class="w-full table-auto border-collapse border border-gray-200 shadow-md">
    <thead class="bg-gray-100">
        <tr>
            <th class="border border-gray-200 px-4 py-2">@Html.DisplayNameFor(model => model.FullName)</th>
            <th class="border border-gray-200 px-4 py-2">@Html.DisplayNameFor(model => model.Email)</th>
            <th class="border border-gray-200 px-4 py-2">@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th class="border border-gray-200 px-4 py-2">@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th class="border border-gray-200 px-4 py-2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="border-t">
                <td class="border border-gray-200 px-4 py-2">@Html.DisplayFor(modelItem => item.FullName)</td>
                <td class="border border-gray-200 px-4 py-2">@Html.DisplayFor(modelItem => item.Email)</td>
                <td class="border border-gray-200 px-4 py-2">@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td class="border border-gray-200 px-4 py-2">@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td class="flex space-x-4 border border-gray-200 px-4 py-2 text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-500 hover:text-blue-700">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-green-500 hover:text-green-700">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-500 hover:text-red-700">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
