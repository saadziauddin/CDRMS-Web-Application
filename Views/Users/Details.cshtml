@model CDRMS_Web_Application.Models.UsersModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4 text-2xl font-bold">User Details</h1>

<div class="rounded bg-white p-6 shadow-md">
    <h4 class="mb-4 text-xl font-semibold text-gray-700">Application User</h4>
    <hr class="mb-6 border-gray-300" />

    <dl class="space-y-4">
        <div class="flex">
            <dt class="w-1/3 font-medium text-gray-700">Full Name</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.FullName)</dd>
        </div>

        <div class="flex">
            <dt class="w-1/3 font-medium text-gray-700">Email</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.Email)</dd>
        </div>

        <div class="flex">
            <dt class="w-1/3 font-medium text-gray-700">Phone Number</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.PhoneNumber)</dd>
        </div>

        <div class="flex">
            <dt class="w-1/3 font-medium text-gray-700">Role</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.PhoneNumber)</dd>
        </div>
    </dl>
</div>

<div class="mt-6 flex space-x-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id"
       class="rounded bg-blue-500 px-4 py-2 text-white hover:bg-blue-600">Edit</a>
    <a asp-action="Index"
       class="rounded bg-gray-400 px-4 py-2 text-white hover:bg-gray-300">Back to List</a>
</div>

