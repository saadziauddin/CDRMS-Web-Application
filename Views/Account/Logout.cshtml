@using CDRMS_Web_Application.Views.Account
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="flex min-h-screen items-center justify-center bg-gray-100">
    <div class="w-full max-w-md rounded-lg bg-white p-8 shadow-md">
        <h1 class="mb-4 text-2xl font-semibold text-gray-900">Log Out</h1>
        
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <form asp-area="Identity" 
                  asp-page="/Account/Logout" 
                  asp-route-returnUrl="@Url.Page("/", new { area = "" })" 
                  method="post" 
                  class="space-y-6">
                <p class="text-gray-700">
                    Are you sure you want to log out of the application?
                </p>
                <div class="flex justify-end space-x-4">
                    <a href="javascript:history.back()" 
                       class="rounded-md bg-gray-200 px-4 py-2 text-gray-800 hover:bg-gray-300">
                        Cancel
                    </a>
                    <button type="submit" 
                            class="rounded-md bg-red-600 px-4 py-2 text-white hover:bg-red-700">
                        Log Out
                    </button>
                </div>
            </form>
        }
        else
        {
            <p class="text-gray-700">
                You have successfully logged out of the application.
            </p>
            <div class="mt-6">
                <a href="@Url.Page("/", new { area = "" })" 
                   class="block rounded-md bg-blue-600 px-4 py-2 text-center text-white hover:bg-blue-700">
                    Return to Home
                </a>
            </div>
        }
    </div>
</div>
