@using CDRMS_Web_Application.Views.Account
@model ResetPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Reset password";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/img/favicon.png" />
    <title>@ViewData["Title"] - CDRMS - Pronet (Pvt.) Ltd</title>

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="/css/site.css" />
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="/lib/font-awesome/css/all.min.css" />

</head>
<body class="relative flex h-screen items-center justify-center bg-cover bg-center" style="background-image: url('/img/BackgroundImage.jpg');">
    <div class="absolute inset-0 bg-black bg-opacity-70 backdrop-blur-sm"></div>

    <div class="z-10 bg-opacity-60 relative w-96 rounded-lg bg-white px-8 pb-6 shadow-lg">
        <img src="/img/PronetLogo.png" alt="Brand Logo" class="mx-auto h-36 w-40 object-contain">

        <form method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Input.Code" name="Input.Code" type="hidden" />
            <div>
                <label asp-for="Input.Email" class="block px-1 pb-1 text-sm font-medium text-gray-700">Email Address</label>
                <input asp-for="Input.Email" id="Email" name="Email" type="email" autocomplete="username" placeholder="name@example.com" class="mt-1 block w-full rounded-full border-gray-300 p-3 shadow-sm focus:ring-teal-500 focus:border-teal-500">
                <span asp-validation-for="Input.Email" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="Input.Password" class="block px-1 pb-1 text-sm font-medium text-gray-700">New Password</label>
                <input asp-for="Input.Password" id="Password" name="Password" type="password" autocomplete="current-password" placeholder="********" class="mt-1 block w-full rounded-full border-gray-300 p-3 shadow-sm focus:ring-teal-500 focus:border-teal-500">
                <span asp-validation-for="Input.Password" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="Input.ConfirmPassword" class="block px-1 pb-1 text-sm font-medium text-gray-700">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" id="Password" name="Password" type="password" autocomplete="current-password" placeholder="********"
                       class="mt-1 block w-full rounded-full border-gray-300 p-3 shadow-sm focus:ring-teal-500 focus:border-teal-500">
                <span asp-validation-for="Input.ConfirmPassword" class="text-sm text-red-500"></span>
            </div>

            <button type="submit" class="w-full rounded-full bg-teal-700 px-4 py-3 text-sm font-medium text-white hover:bg-teal-600 focus:outline-none focus:ring-1 focus:ring-teal-500 focus:ring-offset-2">
                Reset Password
            </button>
        </form>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
