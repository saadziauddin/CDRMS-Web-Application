@using CDRMS_Web_Application.Views.Account
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/img/favicon.png" />
    <title>@ViewData["Title"] - CDRMS - Pronet (Pvt.) Ltd</title>

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="/css/site.css" />
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="/lib/font-awesome/css/all.min.css" />

</head>
<body class="relative flex h-screen items-center justify-center bg-cover bg-center" style="background-image: url('/img/BackgroundImage.jpg');">
    <div class="absolute inset-0 bg-black bg-opacity-70 backdrop-blur-sm"></div>

    <div class="z-10 bg-opacity-60 relative w-96 rounded-lg bg-white px-8 pb-6 shadow-lg">
        <img src="/img/PronetLogo.png" alt="Brand Logo" class="mx-auto h-36 w-40 object-contain">

        <form method="post" class="space-y-6">
            <div>
                <label for="Email" class="block px-1 pb-1 text-sm font-medium text-gray-700">Email</label>
                <input id="Email" name="Email" type="email" autocomplete="username" placeholder="Enter your email" class="mt-1 block w-full rounded-full border-gray-300 p-3 shadow-sm focus:ring-teal-500 focus:border-teal-500">
                <span class="text-sm text-red-500">@Html.ValidationMessageFor(m => m.Input.Email)</span>
            </div>

            <div>
                <label for="Password" class="block px-1 pb-1 text-sm font-medium text-gray-700">Password</label>
                <input id="Password" name="Password" type="password" autocomplete="current-password" placeholder="********"
                       class="mt-1 block w-full rounded-full border-gray-300 p-3 shadow-sm focus:ring-teal-500 focus:border-teal-500">
                <span class="text-sm text-red-500">@Html.ValidationMessageFor(m => m.Input.Password)</span>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input id="rememberMe" name="RememberMe" type="checkbox"
                           class="h-4 w-4 rounded border-gray-300 text-teal-600 focus:ring-teal-500">
                    <label for="rememberMe" class="ml-2 block text-sm text-gray-700">Remember me</label>
                </div>

                <div>
                    <a href="#" class="text-sm text-teal-600 hover:underline">Forgot password?</a>
                </div>
            </div>

            <button type="submit"
                    class="w-full rounded-full bg-red-600 px-4 py-3 text-sm font-medium text-white hover:bg-red-500 focus:outline-none focus:ring-1 focus:ring-teal-500 focus:ring-offset-2">
                Sign In
            </button>
        </form>

        <div class="mt-6 text-center">
            <p class="text-sm text-gray-600">
                Don’t have an account?
                <a href="#" class="text-teal-600 hover:underline">Sign Up</a>
            </p>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
